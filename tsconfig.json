{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": ["es6", "es2015"],
        "types": ["node"],
        "declaration": true,
        "outDir": "lib",
        "rootDir": "src",
        "strict": true
    },
    "include": ["src"],
    "exclude": ["lib", "node_modules", "**/__tests__/*"]
}
