{
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "./lib",
        "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"],

    "declaration": true,
    "rootDir": "./src",
    "moduleResolution": "node",
    "lib": ["es6", "dom", "es2016", "es2017", "es2018", "es2019", "es2020"],
    "esModuleInterop": true,

    "types": ["node"],
    "typeRoots": ["../node_modules/@types"],

    "target": "esnext",
    "module": "commonjs"
}
